<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1"/>
        <title>{% block title %}Starter kit symfony{% endblock %}</title>
        <link rel="icon" type="image/x-icon" href="{{ asset('symfony-icon.png') }}" />
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
            <link rel="stylesheet" href="{{ asset('bundles/babdevpagerfanta/css/pagerfanta.css') }}">
        {% endblock %}
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        {% block body %}
            <div class="row">
                <div class="col-12">
                    {% block header %}
                        {% include 'layout/_header.html.twig' %}
                    {% endblock %}
                </div>
            </div>
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        {% include('layout/_flash_messages.html.twig') %}
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 mb-5" style="min-height: 7em;">
                        {% block main_content %}
                        {% endblock %}
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12 text-end pe-4">
                    {% block footer %}
                        {% include('layout/_footer.html.twig') %}
                    {% endblock %}
                </div>
            </div>
        {% endblock %}
    </body>
</html>

