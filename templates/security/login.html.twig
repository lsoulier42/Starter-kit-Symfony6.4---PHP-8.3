{% extends 'base.html.twig' %}

{% block title %}{{ 'global.label.login'|trans }}{% endblock %}

{% block main_content %}
    <div class="row justify-content-center">
        <div class="col-5">
            <div class="flex-wrap">
                <div class="border p-4 p-md-5">
                    <div class="d-flex">
                        <div class="w-100">
                            <h3 class="mb-4">{{ 'global.label.login'|trans }}</h3>
                        </div>
                        <div class="w-100">
                            <p class="social-media d-flex justify-content-end">
                                <a href="#" class="d-flex align-items-center justify-content-center text-decoration-none me-1">
                                    <i class="fa-brands fa-instagram"></i>
                                </a>
                                <a href="#" class="d-flex align-items-center justify-content-center text-decoration-none me-1">
                                    <i class="fa-brands fa-twitch"></i>
                                </a>
                                <a href="#" class="d-flex align-items-center justify-content-center text-decoration-none">
                                    <i class="fa-brands fa-twitter"></i>
                                </a>
                            </p>
                        </div>
                    </div>
                    {{ form(form) }}
                    <a href="{{ path('app_forgot_password_request') }}" class="form-control btn btn-primary rounded submit px-3">
                        {{ 'global.label.forgot_password'|trans }}
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
